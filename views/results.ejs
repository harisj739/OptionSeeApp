<%- include("partials/header.ejs") %>

<body class="text-bg-info p-3">
  <header>
    <h2 class="display-5">Available Flights</h2>
    <h4>Departures for <%=ticket[0].city%>, <%=ticket[0].state%> on <%= ticket[0].tempDptDate.toDateString() %></h4>
  </header>
  <form method="POST" action="/results">
    <div id="results-form-div" class="form-group">
      <div class="result-column"></div>
      <div class="result-column">
        <div class="resuls-title">
          <p><strong>Times</strong></p>
        </div>
        <div class="result">
          <input type="radio" id = "1" name="dptTime" value="8:00 am">
          <label for="1">8:00 am </label><br>
        </div>
        <div class="result">
          <input type="radio" id = "2" name="dptTime" value="12:00 pm">
          <label for="2">12:00 pm </label><br>
        </div>
        <div class="result">
          <input type="radio" id = "3" name="dptTime" value="4:00 pm">
          <label for="3">4:00 pm </label><br>
        </div>
        <div class="result">
          <input type="radio" id = "4" name="dptTime" value="8:00 pm">
          <label for="4">8:00 pm </label><br>
        </div>
      </div>
      <div class="result-column">
        <div class="results-title">
          <p><strong>Price</strong></p>
        </div>
        <div class="result">
          $<%=ticket[0].price%>.00
        </div>
        <div class="result">
          $<%=ticket[0].price%>.00
        </div>
        <div class="result">
          $<%=ticket[0].price%>.00
        </div>
        <div class="result">
          $<%=ticket[0].price%>.00
        </div>
      </div><br>
      <div class="result-column"></div>
    </div>
    <label for="numTickets">How many tickets would you like?</label>
    <input type="number" id="numTickets" name="numTickets"><br>
    <input type="hidden" name="confirmation" value="<%=ticket[0].tempConf%>" >
    <input type="hidden" name="userId" value="<%=userId%>" >
    <input type="hidden" name="ticketPrice" value="<%=ticket[0].price%>" >
    <button class="btn btn-primary">Proceed to Checkout</button>
  </form>
  
  <form method="POST" action="/results/cancel">
    <input type="hidden" name="confirmation" value="<%=ticket[0].tempConf%>" >
    <input type="hidden" name="userId" value="<%=userId%>" >
    <button type="submit" onclick="return confirm('Are you sure you want to cancel?')" class="btn btn-primary">Cancel</button>
  </form>
  <% if (typeof message != "undefined") { %>
    <p><em><%= message %></em></p>
  <% } %>

<%- include("partials/footer.ejs") %>

</body>
</html>
