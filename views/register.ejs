  <%- include("partials/header.ejs") %>

  <body id="register-body" class="text-bg-info p-3">
    <header id="register-header">
         
      <br><h1 style="background-color: white;"> Welcome to OptionSee Flights! </h1>
      <i>Please enter a unique username and a valid password to create your account.</i>
      <br></header><hr>

    <h2>Create an Account </h2>
    <form action="/register" method="post">
      <label for="newUsername">New Username:</label>
      <input type="text" id="newUsername" name="newUsername" required>
      <br>
      <label for="newPassword">New Password:</label>
      <input type="password" id="newPassword" name="newPassword" required>
      <br>
      <label for="firstName">First Name:</label>
      <input type="text" id="firstName" name="firstName" required>
      <br>
      <label for="lastName">Last Name:</label>
      <input type="text" id="lastName" name="lastName" required>
      <br>
      <label for="dob">Date of Birth:</label>
      <input type="date" id="dob" name="dob" required>
      <br>
      <label for="sex">Sex:</label>
      <select id="sex" name="sex" required>
        <option value="M">Male</option>
        <option value="F">Female</option>
      </select>
      <br>
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required>
      <br>
      <label for="phone">Phone:</label>
      <input type="tel" id="phone" name="phone" required>
      <br>
      <button type="submit" class="profileBtns">Create Account</button>
    </form><br>

    <button class="profileBtns" onclick="location.href='/login'">Back to Login</button>

    <% if (typeof message != "undefined"){ %>
      <h3><%=message%></h3>
    <% } %>

